public   static   double  [  ]  [  ]  increment  (  int   m  ,  int   n  ,  double   begin  ,  double   pitch  )  { 

double  [  ]  [  ]  array  =  new   double  [  m  ]  [  n  ]  ; 

for  (  int   i  =  0  ;  i  <  m  ;  i  ++  )  { 

for  (  int   j  =  0  ;  j  <  n  ;  j  ++  )  { 

array  [  i  ]  [  j  ]  =  begin  +  i  *  pitch  ; 

} 

} 

return   array  ; 

} 

